<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingRight="100dp"
        android:paddingTop="50dp" >

        <Button
            android:id="@+id/clearDbButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Clear Database"
            android:textSize="24sp" />

        <RadioGroup
	        android:id="@+id/radioGestureCondition"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:paddingTop="20dp" >
	        
	        <RadioButton
	            android:id="@+id/radioGesture"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Gesture Condition"
                android:layout_marginTop="20dp"
	            android:textSize="24sp" />
	
	        <RadioButton
	            android:id="@+id/radioHighlight"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Highlight Only Condition"
                android:layout_marginTop="20dp"
	            android:textSize="24sp" />
	
	        <RadioButton
	            android:id="@+id/radioNonGesture"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Non-Gesture Condition"
                android:layout_marginTop="20dp"
	            android:textSize="24sp" />
        </RadioGroup>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="237dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="359dp" >

            <TextView
                android:id="@+id/dbDebugView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="solved_problems table"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="bottom" >

        <Button
            android:id="@+id/saveButton"
            android:layout_width="275dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="Save"
            android:textSize="76sp" />
    </RelativeLayout>

</LinearLayout>